{
  "topics": {
    "query": "sum(rate(kafka_topic_partition_current_offset{topic!~\"__.*|.*changelog|.*repartition\"}[1h] offset 1m)) by (topic)",
    "key": "topic"
  },
  "consumerGroups": {
    "lagQuery": "sum(avg_over_time(kafka_consumergroup_lag{consumergroup!~\"ignored.*\", topic!~\"__.*|.*changelog|.*repartition\"}[1h] offset 1m)) by (topic, consumergroup)",
    "rateQuery": "sum(rate(kafka_consumergroup_current_offset{consumergroup!~\"ignored.*\", topic!~\"__.*|.*changelog|.*repartition\"}[1h] offset 1m)) by (topic, consumergroup)",
    "topicKey": "topic",
    "groupKey": "consumergroup"
  },
  "metrics": {
    "requests": {
      "rateQuery": "sum(rate(http_server_requests_seconds_count[1h] offset 1m)) by (service)",
      "errorQuery": "60*sum(rate(http_server_requests_seconds_count{status=~\"5.*\"}[1h] offset 1m)) by (service)",
      "durationQuery": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket[1h] offset 1m)) by (service,le))",
      "serviceKey": "service"
    }
  },
  "services": {
    "timebased-challenge-service": {
      "producer": ["timebased-challenge.events"],
      "requestsFrom": ["stats-service", "global-leaderboard-service"]
    },
    "stats-service": {
      "producerRegex": "event.stats.*",
      "consumerGroups": ["stats-service-consumer-1"]
    },
    "gloot-notification-service": {
      "consumerGroups": ["gloot-notification-service"]
    },
    "public-game-service": {
      "producer": ["rawPublicGameEvents"]
    },
    "translator-service": {
      "producer": ["featureTopic"],
      "consumerGroups": ["translator-service-consumer"]
    },
    "single-round-challenge-service": {
      "producerRegex": "single-round-challenge.*",
      "consumerGroups": ["single-round-challenge-service"]
    },
    "global-leaderboard-service": {
      "consumerGroups": ["global-leaderboard-service"]
    },
    "latest-winners-service": {
      "producerRegex": "latest-winners.*",
      "consumerGroups": ["latest-winners-service"]
    },
    "bi-middleware": {
      "consumerGroups": ["bi-consumer"]
    }
  }
}
